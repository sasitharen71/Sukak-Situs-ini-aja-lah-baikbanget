];

  function randomShio() {
    const shio = shioData[Math.floor(Math.random() * shioData.length)];
    document.getElementById("shioName").innerText = shio.name;
    const randomDesc = shio.desc[Math.floor(Math.random() * shio.desc.length)];
    document.getElementById("shioDesc").innerHTML = randomDesc;
    document.getElementById("shioImage").style.backgroundImage = `url(${shio.url})`;
  }

  // Compass angka
  function randomNumbers() {
    document.getElementById("numTop").innerText = Math.floor(Math.random()*10);
    document.getElementById("numBottom").innerText = Math.floor(Math.random()*10);
    document.getElementById("numLeft").innerText = Math.floor(Math.random()*10);
    document.getElementById("numRight").innerText = Math.floor(Math.random()*10);
  }

  // BBFS & BEBAS acak tiap refresh
  function updateBBFS() {
    let numbers = '';
    for (let i = 0; i < 7; i++) {
      numbers += Math.floor(Math.random()*10);
    }
    document.getElementById('bbfsNumbers').innerText = numbers;
  }

  function updateBEBAS() {
    const num1 = Math.floor(Math.random()*10);
    const num2 = Math.floor(Math.random()*10);
    document.getElementById('bebasNumbers').innerText = `${num1}/${num2}`;
  }

  // Lokasi acak
  const locations = ['POIPET','NEVADA','BRUNEI','CHELSEA','HUAHIN','BANGKOK','TOTOMALI','TOTOMACAU', 'HOKIDRAW','SYDNEY','KINGKONG','TOTO CAMBODIA','HONGKONG','MAGNUM4D'];
  function renderRandomLocation() {
    const container = document.getElementById('locationsList');
    container.innerHTML = '';
    const randomLoc = locations[Math.floor(Math.random() * locations.length)];
    const span = document.createElement('span');
    span.innerText = randomLoc;
    container.appendChild(span);
  }

  // Init
  updateDate();
  randomShio();
  randomFooter();
  randomNumbers();
  updateBBFS();
  updateBEBAS();
  renderRandomLocation();
  setInterval(randomNumbers, 1000);
</script>
